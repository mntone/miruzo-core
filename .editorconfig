root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = tab

[*.md]
indent_style = space
trim_trailing_whitespace = false
max_line_length = 80

[*.py]
indent_style = tab
max_line_length = 120

[*.yaml]
indent_style = space
indent_size = 2
